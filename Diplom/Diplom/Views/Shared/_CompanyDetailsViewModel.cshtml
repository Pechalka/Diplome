@model CompanyDetailsBase
<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Href("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Href("~/Scripts/jquery-1.7.2.min.js")" type="text/javascript"></script>
    <script src="@Href("~/Content/bootstrap/js/bootstrap.min.js")" type="text/javascript"></script>
        @if (IsSectionDefined("Script"))
        {
            @RenderSection("Script")
        }
</head>

<body>
    <div class="container">
    <div class="row">
        @if (IsSectionDefined("Breadcrumb"))
        {
            @RenderSection("Breadcrumb")
        }
    </div>
    <div class="row">
        <div class="span4">
            <a href="#" class="thumbnail">
                <img src="http://placehold.it/360x268" alt="">
            </a>

                        <div class="row">

    @if (IsSectionDefined("Service"))
    {
        @RenderSection("Service")
    }
    else
    {
                       <div class="span4">
        <div class="row">
        <h2 class="span2" > услуги</h2> 
        
        <div  class="span2" style="vertical-align: middle">
            @Html.ActionLink("редактировать", "Change", "Companies", new { id = Model.CompanyId }, new { @class = "btn  btn-primary btn-mini " })

        </div>
        
        </div>
        

        @for (int i = 0; i < Model.Services.Count; i++)
        {
            <a class="btn btn-mini">@Model.Services[i]</a>
        }
        

           
        </div>
    }
                <div class="span4">
                <a class="btn btn-large btn-primary" style="margin-top: 10px;">Заказать услугу</a>
                </div>
         </div>
        </div>

        <div class="span6">
            @RenderSection("Main")
        </div>


        <div class="span2">    
            @Html.Partial("CompanyNavigation", new CompanyStatisticViewModel { CompanyId = Model.CompanyId, Selected = ViewBag.SelectedNavigation })
        </div>
    </div>
   
    </div>
</body>
</html>



