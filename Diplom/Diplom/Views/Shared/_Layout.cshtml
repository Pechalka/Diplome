<!DOCTYPE html>
<html>
<head>
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/bootstrap/css/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
</head>

<body>
    <div class="container">
    <div class="row">
    @{
        var category = ViewData["category"] as string;
        }
        <ul class="breadcrumb">
      <li>
        @Html.ActionLink("Главная", "List", "Companies") @if (!string.IsNullOrEmpty( category))
                                                         {
                                                             <span class="divider">/</span>
                                                         }
      </li>
      @{
          
                                                             if (!string.IsNullOrEmpty( category))
          {
              <li>
                     <li class="active">@category</li>   
                @*@Html.ActionLink(category, "List", "Companies", new { category = category }, null) <span class="divider">/</span>*@
              </li>
          }
      }
      
      @*<li class="active">Ив Роше</li>*@
    </ul>
    </div>
    <div class="row">
         @RenderBody()
    </div>
   
    </div>
</body>
</html>
