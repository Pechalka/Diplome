@model CompanyViewModel
@{
    ViewBag.Title = Model.Name;
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@section Breadcrumb{
    <ul class="breadcrumb">
                <li>
                    @Html.ActionLink("Главная", "List", "Companies") 
                </li>
                <li>
                    <span class="divider">/</span>
                    @Html.ActionLink(Model.Name, "Details", "Companies", new { id = Model.Id }, null)  
                </li>
                <li>
                    <span class="divider">/</span>
                    Отзывы 
                </li>
    </ul>
}
<div class="span9">
    @for (int n = 1; n <= 4; n++)
    {
                <div class="row">
                    <div class="span2 ">
                        <a  class="thumbnail">
                            <img src="http://placehold.it/160x120" alt="">
                        </a>
                        
                    </div>
                    <div class="span7">
                       
                        <h3>
                        @if (n % 3 == 0)
                        {
                            <span class="label label-important">плохо</span>
                        }else
                        {
                            <span class="label label-success">хорошо</span>
                        }
                        <small> @DateTime.Now.ToString("dd.MM.yyyy")</small></h3>
                        <p>вапорвапопао ваповопр оапропаро аооапаокпр ароапорапопра апор апоопароапро </p>
                    </div>
                </div>
    }
</div>
<div class="span3">    
    @Html.Partial("CompanyNavigation", new CompanyNavigationViewModel { CompanyId = Model.Id, Selected = "2" })
</div>
