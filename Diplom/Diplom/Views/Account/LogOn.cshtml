@model Diplom.ViewModels.LogOnForm

@{
    ViewBag.Title = "LogOn";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Breadcrumb{
    <ul class="breadcrumb">
                <li>
                    @Html.ActionLink("Главная", "List", "Companies") 
                </li>
                    <span class="divider">/</span>
                    <li>
                            <li class="active">Вход</li>   
                    </li>
                </ul>
}


<div class="span8 offset2">
@using (Html.BeginForm(null, null, FormMethod.Post, new { @class = "form-horizontal" }))
{    
    <fieldset>
        <div class="control-group">
            <label class="control-label" for="Login">Логин</label>
            <div class="controls">
              @Html.TextBoxFor(model => model.Login, new { @class = "input-xlarge" })  @Html.ValidationMessageFor(_ => _.Login)
            </div>
        </div>
        <div class="control-group">
            <label class="control-label" for="Password">Пароль</label>
            <div class="controls">
              @Html.PasswordFor(model => model.Password, new { @class = "input-xlarge" })  @Html.ValidationMessageFor(_ => _.Password)
            </div>
        </div>
        <div class="form-actions">
            <input type="submit" value="Войти" class="btn btn-success btn-large" />
          </div>
    </fieldset>
}
</div>
